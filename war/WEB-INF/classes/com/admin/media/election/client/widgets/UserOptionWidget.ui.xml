<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.main{
			padding: 10px;
			float: right;
		}
		.main .name-section{
			margin-top: auto;
			margin-bottom: auto;
			float:left;
			margin-right: 16px;
		}
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.main}">
			<div class="{style.name-section}" ui:field="userNameField"/>
			<g:Anchor styleName="{style.name-section}" href="javascript:void(0)" ui:field="logoutLink">Logout</g:Anchor>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 